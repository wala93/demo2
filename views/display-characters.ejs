<!DOCTYPE html>
<html lang="en">

<%- include('./layouts/head.ejs') %>

    <body>
        <header>
            <%- include('./layouts/nav.ejs') %>
        </header>
        <main>
            <% characters.forEach( character=> { %>
                <section>
                    <p>
                        <%= character.name %>
                    </p>
                    <p>
                        <%= character.house %>
                    </p>
                    <p>
                        <%= character.patronus %>
                    </p>
                    <p>
                        <%= character.alive %>
                    </p>
                    <a href="/character/<%= character.id%>">View Details</a>
                </section>
                <% }) %>
        </main>
    </body>

</html>
